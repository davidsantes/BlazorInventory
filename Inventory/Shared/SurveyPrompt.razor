<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-info mr-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Si quieres conocer más acerca de esta potente herramienta, 
        <a target="_blank" class="font-weight-bold" href="https://dotnet.microsoft.com/apps/aspnet/web-apps/blazor">visita la página oficial de Blazor.</a>
    </span>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
